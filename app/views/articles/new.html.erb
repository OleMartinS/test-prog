<h1>Nytt Blogginnlegg</h1>

<%= form_for :article, url: articles_path do |f| %>
	<% if @article.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@article.errors.count, "grunn") %> til at dette ikke ble lagret:
			</h2>
			<ul>
				<%= @article.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<p>
		<%= f.label :tittel %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :tekst %><br>
		<%= f.text_area :text %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>
<%= link_to 'Tilbake', articles_path %>