<h1>Article # <%= @article.id %></h1>
<p>
	<h3>Title:</h3>
	<%= @article.title %>
</p>
<p>
	<h3>Text:</h3>
	<%= @article.text %>
</p>

<!-- <% i = - @article.comments.count + 1 %> -->
<% if @article.comments.count > 0 %>
	<h2> - Comments:</h2>
	<table>
			<%= render @article.comments, :i => i %>
	</table>
<% else %>
	<h2> - There is no comments</h2>
<% end %>

<h2> - Add a comment:</h2>



	<% if @article.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@article.errors.count, "reason") %> that the comment couldn't be saved:
			</h2>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>




<%= form_for ([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :commenter %><br>
		<%= f.text_field :commenter %>
	</p>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %><br>
<%= link_to 'Back', articles_path %>