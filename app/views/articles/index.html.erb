<h1>Liste av alle blogginnleggene</h1>
<%= link_to 'Ny artikkel', new_article_path %>
<p>
<table border="1">
  <tr>
    <th>Tittel</th>
    <th>Tekst</th>
	<th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Vis', article_path(article) %></td>
		<td><%= link_to 'Endre', edit_article_path(article) %></td>
		<td><%= link_to 'Fjern', article, method: :delete, data: {confirm: 'Vil du slette denne artikkelen?'} %></td>
    </tr>
  <% end %>
</table>